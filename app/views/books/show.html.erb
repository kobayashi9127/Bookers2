<h2>User info</h2>
  <div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <h3 class="profile-name"><%= @user.name %></h3>

</div>
<h2>New book</h2>
 <%= form_with model:@booknew, local:true do |f| %>
  <h4>Title</h4>
    <div class><%= f.text_area :title %></div>
  <h4>Option</h4>
    <div class><%= f.text_field :body %></div>
  <div><%= f.submit 'Create Book' %></div>
<% end %>



<h2>Book detail</h2>
 <table>
    <tr>
     　<td><%= user.profile_image_id %></td>
     　<td><%= user.name %></td>
     　<td><%= book.title %></td>
     　<td><%= book.body %></td>
     　 <% if book.user == current_user %>
     　<td><%= link_to 'Edit', edit_book_path(book)%></td>
     　<td><%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
       <% end %>
    </tr>
</table>