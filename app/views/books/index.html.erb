<div class="container-fluid">
 <div class="row">
  <div class="col-4">
    <h2>User info</h2>
     <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
     <table class="table">
      <tbody>
       <tr>
        <th>name</th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
       </tr>
      </tbody>
     </table>
     
      <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
     

    <h2>New book</h2>
    <% if @book.errors.any? %>
    <%= @book.errors.count %>件の error が発生しました
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
    <% end %>
     <%= form_with model:@book_new, local:true do |f| %>
     <h4>Title</h4>
      <div class><%= f.text_field :title %></div>
     <h4>Option</h4>
      <div class><%= f.text_area :body %></div>
      <div><%= f.submit 'Create Book' %></div>
      <% end %>
  </div>

  <div class="col-8">
   <h2>Books</h2>
   <table class="table table-striped">
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to attachment_image_tag book.user, user_path(@users.id), :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
   </table>
  </div>
 </div>
</div>