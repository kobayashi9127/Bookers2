<h2>User info</h2>
 <div class="profile-container">
 <h3 class="profile-name"><%= @user.name %></h3>
</div>

<h2>New book</h2>
<%= form_with scope: :book, local:true do |f| %>
  <h4>Title</h4>
  <div class><%= f.text_field :title %></div>
  <h4>Option</h4>
  <div class><%= f.text_area :body %></div>
  <div><%= f.submit 'Create Book' %></div>
<% end %>

<h2>Books</h2>
</thead>
  
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Edit', edit_book_path(book)%></td>
      <td><%= link_to 'Destroy', book_path(book), method: :delete,  %>
      </td>
    </tr>
  <% end %>
</table>