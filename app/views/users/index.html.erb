<h2>User info</h2>
  <div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <h3 class="profile-name"><%= @user.name %></h3>


</div>
<h2>New book</h2>
 <%= form_with model:@booknew, local:true do |f| %>
  <h4>Title</h4>
    <div class><%= f.text_field :title %></div>
  <h4>Option</h4>
    <div class><%= f.text_area :body %></div>
    <div><%= f.submit 'Create Book' %></div>
 <% end %>


<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <% @users.each do |u| %>
   <tbody>
     <tr>
      <td> <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
      <td><%= u.name %></td>
      <td><%= link_to "show", user_path(u.id) %></td>
     </tr>
   </tbody>
  <% end %>
</table>