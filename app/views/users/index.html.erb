<div class="container">
 <div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
     <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
     <table class="table table-striped">
      <tbody>
       <tr>
        <th>name</th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
        <th>introdaction</th>
        <th><%= @user.introduction %></th>
       </tr>
      </tbody>
     </table>
      
      <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
     

      <h2>New book</h2>
      <% if @book.errors.any? %>
      <%= @book.errors.count %>件の error が発生しました
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
      <% end %>
       <%= form_with model:@book, local:true do |f| %>
       <h4>Title</h4>
        <div class><%= f.text_field :title %></div>
       <h4>Option</h4>
        <div class><%= f.text_area :body %></div>
        <div><%= f.submit 'Create Book' %></div>
       <% end %>
 </div>

  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table table-striped">
     <thead>
      <tr>
       <th>image</th>
       <th>name</th>
       <th></th>
      </tr>
     </thead>
    <% @users.each do |u| %>
     <tbody>
      <tr>
       <td>
        <%= link_to user_path(u.id) do %>
        <%= attachment_image_tag u, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <% end %>
       </td>
       <td><%= u.name %></td>
       <td><%= link_to "Show", user_path(u.id) %></td>
      </tr>
     </tbody>
    <% end %>
    </table>
  </div>
 </div>
</div>