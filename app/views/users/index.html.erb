<h2>User info</h2>
  <div class="profile-container">
  <%= image_tag('sample-author1.jpg') %>
  <h3 class="profile-name"><%= @user.name %></h3>

</div>
<h2>New book</h2>
<%= form_with model:@booknew, local:true do |f| %>
  <h4>Title</h4>
  <div class><%= f.text_area :title %></div>
  <h4>Option</h4>
  <div class><%= f.text_field :body %></div>
  <div><%= f.submit 'Create Book' %></div>
<% end %>

<h2>Users</h2>

<table>
  <% @users.each do |u| %>
<tr>
<td><%#= u.profile_image_id %></td>
<td><%= u.name %></td>
<td><%= link_to "show", user_path(u.id) %></td>
</tr>
  <% end %>
</table>