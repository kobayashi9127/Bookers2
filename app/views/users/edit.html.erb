<div class="container-fluid">
 <div class="row">
  <div class="col-12">
   <h2>User info</h2>
   <%= form_with model:@user, local:true do |f| %>
   <div><label for="inputName">Name</label></div>
   <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  
   <div><label for="inputImage">ProfileImage</label></div>
   <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  
   <div><label for="inputintroduction">introduction</label></div>
   <%= f.text_area :introduction %></div>
  
   <div><%= f.submit "Update User" %></div>
   <% end %>
  </div>
 </div>
</div>